  <div class="show-row">
    <ul class="item-row row">
      <li class="doc-tumb col-xs-12 col-sm-6 col-md-9", style="flex-direction: space-around">
        <%= cl_image_tag @document.image_url, class:"doc-tumb col col-md-12", style: 'border: 1px solid lightgrey; height:300px; width:auto;' %>
     </li>

    <li class="doc-info col col-xs-12 col-sm-3 col-md-1" style="margin-left: 20px">


            <%#= link_to patient_document_path(@patient, @document.id), class: "btn btn-default", style: "color:blue; width:100px;" do %>
            <%= link_to @document.image_url, class: "btn btn-default", style: "color:blue; width:100px;" do %>

             <i class="fas fa-list-ul"></i><span class="website"> Show</span>
            <% end %>

            <%= link_to edit_patient_document_path(@patient, @document), class: "btn btn-default", style: "color:blue; width:100px;" do %>
              <i class="far fa-file-alt"></i><span> <%#= @documents.where(status: 'active').count - document.topic.where(status: 'active', doc_type: 'Exam').count %></span><span class="website"> Edit</span>
            <% end %>

            <%#= link_to 'download', root_path << @document.image_url %>
            <%#= link_to "Download", @document.image_url, download:true %>
            <%= link_to download_patient_document_path, class: "btn btn-default", style: "color:blue; width:100px;" do %>
              <i class="far fa-chart-bar"></i><span> <%#= @documents.where(status: 'active', doc_type: 'Exam').count %></span><span class="website"> Download</span>
            <% end %>

