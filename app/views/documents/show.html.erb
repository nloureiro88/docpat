              <br>

              <a href=<%= @document.image_url %> download>
                <img src=<%= @document.image_url %> alt="W3Schools">AOGORA
              </a>



            <%= link_to deactivate_patient_document_path(@patient, @document), class: "btn btn-default", style: "color:blue; width:100px;" do %>
              <i class="far fa-calendar-alt"></i><span> <%#= @document.topic.schedules.where(status: 'active').count %></span><span class="website"> Deactivate</span>
            <% end %>
   </li>




  </ul>
