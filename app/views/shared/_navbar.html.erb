
<div class="navbar-wagon fixed-top">
  <!-- Logo -->
  <%= link_to root_path, class: "navbar-wagon-brand" do %>
            <h2 style="color:#F6B586;">Doc<span style="color:#8BC7E9">Pat</span></h2>
    <%#= image_tag "logo.png", height: 50 %>
  <% end %>

  <!-- Right Navigation -->
  <div class="navbar-wagon-right hidden-xs hidden-sm">

    <% if user_signed_in? %>

      <% @patient = current_user if @patient.nil? %>

      <!-- Links when logged in -->
      <%= link_to "Home", patient_path(@patient), class: "navbar-wagon-item navbar-wagon-link" %>
      <%= link_to "Doctors", doctors_patient_path(@patient), class: "navbar-wagon-item navbar-wagon-link" %>
      <%= link_to "Health Topics", patient_topics_path(@patient), class: "navbar-wagon-item navbar-wagon-link" %>
      <%= link_to "Health Log", patient_updates_path(@patient), class: "navbar-wagon-item navbar-wagon-link" %>
      <%= link_to "Exams", "#", class: "navbar-wagon-item navbar-wagon-link" %>
      <%= link_to "Documents", patient_documents_path(@patient), class: "navbar-wagon-item navbar-wagon-link" %>
      <%= link_to "Prescriptions", patient_schedules_path(@patient), class: "navbar-wagon-item navbar-wagon-link" %>

      <!-- Avatar with dropdown menu -->
      <div class="navbar-wagon-item">
        <div class="dropdown">
          <%#= link_to "Welcome, #{current_user.first_name}", patient_schedules_path(@patient), class: "toggle-info dropdown-toggle", id: "navbar-wagon-menu", "data-toggle" => "dropdown" %>
          <%= image_tag "settings.svg", class: "avatar dropdown-toggle", id: "navbar-wagon-menu", "data-toggle" => "dropdown" %>
          <ul class="dropdown-menu dropdown-menu-right navbar-wagon-dropdown-menu">
            <li>
              <%= link_to edit_user_registration_path do %>
                <i class="fa fa-user"></i> <%= t(".profile", default: "Profile") %>
              <% end %>
            </li>
            <!-- <li>
              <%#= link_to "#" do %>
                <i class="fa fa-cog"></i>  <%#= t(".settings", default: "Settings") %>
              <#% end %>
            </li> -->
            <li>
              <%= link_to destroy_user_session_path, method: :delete do %>
                <i class="fa fa-sign-out"></i>  <%= t(".sign_out", default: "Log out") %>
              <% end %>
            </li>
          </ul>
        </div>
      </div>
    <% else %>
      <!-- Login link (when logged out) -->
      <%= link_to t(".sign_in", default: "Login"), new_user_session_path, class: "navbar-wagon-item navbar-wagon-link" %>
    <% end %>
  </div>

  <!-- Dropdown list appearing on mobile only -->
  <% if user_signed_in? %>

    <% @patient = current_user if @patient.nil? %>

    <div class="navbar-wagon-item hidden-md hidden-lg">
      <div class="dropdown">
        <i class="fa fa-bars dropdown-toggle" data-toggle="dropdown"></i>
        <ul class="dropdown-menu dropdown-menu-right navbar-wagon-dropdown-menu">
          <li><%= link_to "Home", patient_path(@patient) %></li>
          <li><%= link_to "Doctors", doctors_patient_path(@patient) %></li>
          <li><%= link_to "Health Topics", patient_topics_path(@patient) %></li>
          <li><%= link_to "Health Log", patient_updates_path(@patient) %></li>
          <li><%= link_to "Exams", "#" %></li>
          <li><%= link_to "Documents", patient_documents_path(@patient) %></li>
          <li><%= link_to "Prescriptions", patient_schedules_path(@patient) %></li>
        </ul>
      </div>
    </div>

  <% end %>
</div>

